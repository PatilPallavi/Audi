<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Login"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Image">
                <items jcr:primaryType="cq:WidgetCollection">
                    <image
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Image Selector"
                        name="./image"
                        rootPath="/content/dam"
                        xtype="pathfield"/>
                    <message-text
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Image Text"
                        fieldWidth="400"
                        name="./imageText"
                        xtype="textfield"/>
                    <experience
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description"
                        name="./desc"
                        xtype="richtext"/>
                    <link jcr:primaryType="cq:Widget"/>
                </items>
            </tab1>
            <Login
                jcr:primaryType="cq:Panel"
                title="Login Step 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <query-text
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Login query text"
                        fieldWidth="400"
                        name="./queryText"
                        xtype="textfield"/>
                    <experience
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description"
                        name="./logindesc"
                        xtype="richtext"/>
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Login Module title"
                        fieldWidth="400"
                        name="./title"
                        xtype="textfield"/>
                </items>
            </Login>
            <loginTwo
                jcr:primaryType="cq:Panel"
                title="Login Step 2">
                <items jcr:primaryType="cq:WidgetCollection">
                    <experience
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Registeration text"
                        name="./regnow"
                        xtype="richtext"/>
                </items>
            </loginTwo>
            <loginThree
                jcr:primaryType="cq:Panel"
                title="Login Step 3">
                <items jcr:primaryType="cq:WidgetCollection">
                    <query-text
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Login In Text"
                        fieldWidth="400"
                        name="./loggedText"
                        xtype="textfield"/>
                    <multi
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Add Links:"
                        name="./multifield"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            hideLabel="{Boolean}true"
                            layout="form"
                            xtype="customMultiPanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <fieldName
                                    jcr:primaryType="cq:Widget"
                                    dName="fieldlabel1"
                                    fieldLabel="Link Title:"
                                    itemId="fieldLabel1"
                                    xtype="textfield"/>
                                <fieldLink
                                    jcr:primaryType="cq:Widget"
                                    dName="fieldlink1"
                                    fieldLabel="Link"
                                    itemId="fieldlink1"
                                    xtype="pathfield"/>
                                <fieldIcon
                                    jcr:primaryType="cq:Widget"
                                    dName="fieldlabel3"
                                    fieldLabel="Link Icon:"
                                    itemId="fieldLabel3"
                                    xtype="textfield"/>
                                <fieldIcon2
                                    jcr:primaryType="cq:Widget"
                                    dName="fieldlabel4"
                                    fieldLabel="Link Icon2:"
                                    itemId="fieldLabel4"
                                    xtype="textfield"/>
                            </items>
                        </fieldConfig>
                    </multi>
                </items>
            </loginThree>
        </items>
    </items>
</jcr:root>
